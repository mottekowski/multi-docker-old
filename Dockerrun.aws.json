{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "mottekowski/multi-client",
            "hostname": "client",
            "essential": false

        },
        {
            "name": "server",
            "image": "mottekowski/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "mottekowski/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image" :"mottekowski/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": "80",
                    "containerPort": "80" 
                }
            ],
            "links": ["client", "server"]
        }
    ]
}